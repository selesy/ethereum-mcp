{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/selesy/ethereum-mcp/eth_getTransactionByBlockHashAndIndex.json",
  "$defs": {
    "hash32": {
      "type": "string",
      "pattern": "^0x[0-9a-f]{64}$",
      "title": "32 byte hex value"
    },
    "uint": {
      "type": "string",
      "pattern": "^0x(0|[1-9a-f][0-9a-f]*)$",
      "title": "hex encoded unsigned integer"
    }
  },
  "properties": {
    "block_hash": {
      "$ref": "#/$defs/hash32",
      "title": "block_hash",
      "description": "Block hash"
    },
    "transaction_index": {
      "$ref": "#/$defs/uint",
      "title": "transaction_index",
      "description": "Transaction index"
    }
  },
  "type": "object",
  "required": [
    "block_hash",
    "transaction_index"
  ],
  "title": "eth_getTransactionByBlockHashAndIndex",
  "description": "Returns information about a transaction by block hash and transaction index position."
}
