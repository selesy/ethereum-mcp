{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/selesy/ethereum-mcp/engine_forkchoiceUpdatedV2.json",
  "$defs": {
    "ForkchoiceStateV1": {
      "properties": {
        "finalizedBlockHash": {
          "$ref": "#/$defs/hash32",
          "title": "Finalized block hash"
        },
        "headBlockHash": {
          "$ref": "#/$defs/hash32",
          "title": "Head block hash"
        },
        "safeBlockHash": {
          "$ref": "#/$defs/hash32",
          "title": "Safe block hash"
        }
      },
      "type": "object",
      "required": [
        "headBlockHash",
        "safeBlockHash",
        "finalizedBlockHash"
      ],
      "title": "Forkchoice state object V1"
    },
    "PayloadAttributesV2": {
      "properties": {
        "prevRandao": {
          "$ref": "#/$defs/PayloadAttributesV1/properties/prevRandao"
        },
        "suggestedFeeRecipient": {
          "$ref": "#/$defs/PayloadAttributesV1/properties/suggestedFeeRecipient"
        },
        "timestamp": {
          "$ref": "#/$defs/PayloadAttributesV1/properties/timestamp"
        },
        "withdrawals": {
          "items": {
            "$ref": "#/$defs/WithdrawalV1"
          },
          "type": "array",
          "title": "Withdrawals"
        }
      },
      "type": "object",
      "required": [
        "timestamp",
        "prevRandao",
        "suggestedFeeRecipient",
        "withdrawals"
      ],
      "title": "Payload attributes object V2"
    },
    "WithdrawalV1": {
      "properties": {
        "address": {
          "$ref": "#/$defs/address",
          "title": "Withdrawal address"
        },
        "amount": {
          "$ref": "#/$defs/uint64",
          "title": "Withdrawal amount"
        },
        "index": {
          "$ref": "#/$defs/uint64",
          "title": "Withdrawal index"
        },
        "validatorIndex": {
          "$ref": "#/$defs/uint64",
          "title": "Validator index"
        }
      },
      "type": "object",
      "required": [
        "index",
        "validatorIndex",
        "address",
        "amount"
      ],
      "title": "Withdrawal object V1"
    },
    "address": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{40}$",
      "title": "hex encoded address"
    },
    "hash32": {
      "type": "string",
      "pattern": "^0x[0-9a-f]{64}$",
      "title": "32 byte hex value"
    },
    "prevRandao": null,
    "suggestedFeeRecipient": null,
    "timestamp": null,
    "uint64": {
      "type": "string",
      "pattern": "^0x(0|[1-9a-f][0-9a-f]{0,15})$",
      "title": "hex encoded 64 bit unsigned integer"
    }
  },
  "properties": {
    "forkchoice_state": {
      "$ref": "#/$defs/ForkchoiceStateV1",
      "title": "forkchoice_state",
      "description": "Forkchoice state"
    },
    "payload_attributes": {
      "$ref": "#/$defs/PayloadAttributesV2",
      "title": "payload_attributes",
      "description": "Payload attributes"
    }
  },
  "type": "object",
  "required": [
    "forkchoice_state"
  ],
  "title": "engine_forkchoiceUpdatedV2",
  "description": "Updates the forkchoice state"
}
