{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/selesy/ethereum-mcp/engine_forkchoiceUpdatedV3.json",
  "$defs": {
    "ForkchoiceStateV1": {
      "properties": {
        "finalizedBlockHash": {
          "$ref": "#/$defs/hash32",
          "title": "Finalized block hash"
        },
        "headBlockHash": {
          "$ref": "#/$defs/hash32",
          "title": "Head block hash"
        },
        "safeBlockHash": {
          "$ref": "#/$defs/hash32",
          "title": "Safe block hash"
        }
      },
      "type": "object",
      "required": [
        "headBlockHash",
        "safeBlockHash",
        "finalizedBlockHash"
      ],
      "title": "Forkchoice state object V1"
    },
    "PayloadAttributesV3": {
      "properties": {
        "parentBeaconBlockRoot": {
          "$ref": "#/$defs/hash32",
          "title": "Parent beacon block root"
        },
        "prevRandao": {
          "$ref": "#/$defs/PayloadAttributesV2/properties/prevRandao"
        },
        "suggestedFeeRecipient": {
          "$ref": "#/$defs/PayloadAttributesV2/properties/suggestedFeeRecipient"
        },
        "timestamp": {
          "$ref": "#/$defs/PayloadAttributesV2/properties/timestamp"
        },
        "withdrawals": {
          "$ref": "#/$defs/PayloadAttributesV2/properties/withdrawals"
        }
      },
      "type": "object",
      "required": [
        "timestamp",
        "prevRandao",
        "suggestedFeeRecipient",
        "withdrawals",
        "parentBeaconBlockRoot"
      ],
      "title": "Payload attributes object V3"
    },
    "hash32": {
      "type": "string",
      "pattern": "^0x[0-9a-f]{64}$",
      "title": "32 byte hex value"
    },
    "prevRandao": null,
    "suggestedFeeRecipient": null,
    "timestamp": null,
    "withdrawals": null
  },
  "properties": {
    "forkchoice_state": {
      "$ref": "#/$defs/ForkchoiceStateV1",
      "title": "forkchoice_state",
      "description": "Forkchoice state"
    },
    "payload_attributes": {
      "$ref": "#/$defs/PayloadAttributesV3",
      "title": "payload_attributes",
      "description": "Payload attributes"
    }
  },
  "type": "object",
  "required": [
    "forkchoice_state"
  ],
  "title": "engine_forkchoiceUpdatedV3",
  "description": "Updates the forkchoice state"
}
